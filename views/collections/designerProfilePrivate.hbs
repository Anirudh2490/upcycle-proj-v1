        <script>
          var clickCounts = 0;
          $("#totalContributions").text();
          $(document).ready(function() {
          $('.btn-api').click(function () {
            console.log("It clicks:", clickCounts)
            var $this = $(this);
            var words = $('.btn-api');
            var $bgColor = $('#bg-change');
            var $processed = $(".processed");
            var $preApproved = $(".pre-approved");
            var $rejected = $(".rejected")
            console.log("processing count")
            
            
            console.log(words.text());
            

            if(clickCounts === 0){
              $this.removeClass('bg-act-green');
              $bgColor.removeClass("list-group-item-success");
              words.text("No offer update given");
              clickCounts++;

            } else if (clickCounts === 1) {
              $this.addClass('bg-act-red');
              words.text("Offer Rejected");
              $bgColor.addClass("list-group-item-danger")
              clickCounts++;
              console.log("Red loop:", clickCounts, $this, words.text())
              } else 
              if (clickCounts == 2) {
                $this.removeClass('bg-act-red')
                $this.addClass('bg-act-yellow');
                $bgColor.removeClass("list-group-item-danger")
                $bgColor.addClass("list-group-item-warning")
                words.text("Offer approved for pre-processing");
                $preApproved.text($('.list-group-item-warning').length);
                clickCounts++;
                console.log("Yellow loop:", clickCounts, $this)
                } else 
                if (clickCounts == 3) {
                  $this.removeClass('bg-act-yellow')
                  $this.addClass('bg-act-green');
                  $bgColor.removeClass("list-group-item-warning");
                  $bgColor.addClass("list-group-item-success");
                  $processed.text($('.list-group-item-success').length);                  
                  words.text("Your processing is now complete!");
                  $rejected.text($('.list-group-item-danger').length);
                  clickCounts++;
                  clickCounts = clickCounts % 4;
                  console.log("Green loop:", clickCounts, $this)
                  }});
          });
