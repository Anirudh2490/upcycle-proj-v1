

<h1> Start collecting fabric for your collection </h1>
  <form action="/sellClothesForm " method="post" enctype="multipart/form-data">
    <div class="form-group">
    <label for="exampleTextarea">Name your collection</label>
    <input name="collectionName" type="text" class="form-control" placeholder="Summer essentials? Winter collection?" aria-label="name" aria-describedby="basic-addon1">
   </div>
   <div class="form-group">
    <label for="exampleTextarea">Story behind the collection</label>
    <textarea name="storyBehind" class="form-control" id="exampleTextarea" rows="3" placeholder="What has inspired this collection? "></textarea>
   </div>
   <div class="form-group">
     <div class="form-group">
    <label for="exampleInputFile"> Upload images of the clothing prototypes/ sketches of your collection</label>
    <input type="file" name='collectionPic' class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp" multiple>
    <small id="fileHelp" class="form-text text-muted">You may choose multiple photos</small>
  </div>
     <div class="container">
        <table id="myTable" class=" table order-list">
            <td>Type of Fabric</td>
            <td>Fabric needed (per KG)</td>
            <td>Euros/KG offered</td>
          <tbody>
              <tr>
               <td class="col-sm-4">
                 <select name="fabricTypes" class="form-control" id="fabricTypes">
                  <option>Denim</option>
                  <option>Wool</option>
                  <option>Cotton</option>
                  <option>Synthetics</option>
                   <option>Nylon</option>
                 </select>
               </td>
               <td class="col-sm-4">
                <select name="fabricWeight" class="form-control" id="fabricWeight">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                 </select>
               </td>
               <td class="col-sm-4">
                <input name="amount" type="text" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
               </td>
              <td class="col-sm-2"><a class="deleteRow"></a>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="text-align: left;">
                    <input type="button" class="btn btn-lg btn-block " id="addrow" value="Add Row" />
                </td>
            </tr>
            <tr>
            </tr>
        </tfoot>
      </table>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{{!-- --------- This is the JQUERY -------------- --}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script>
      $(document).ready(function () {
        var counter = 0;
        $("#addrow").on("click", function () {
        var newRow = $("<tr>");
        var cols = "";

        cols += '<td class="col-sm-4"><select class="form-control" id="fabricTypes name="fabricTypes' + counter + '"><option>Denim</option><option>Wool</option><option>Cotton</option><option>Synthetics</option><option>Nylon</option></select></td>';        
        cols += '<td class="col-sm-4"><select class="form-control" id="fabricWeight" name="fabricWeight"' + counter + '"><option>1</option><option>2</option><option>3</option><option>4</option></select></td>';
        cols += '<td><input type="text" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp" name="amount' + counter + '"/></td>';

        cols += '<td><input type="button" class="ibtnDel btn btn-md btn-danger "  value="Delete"></td>';
        newRow.append(cols);
        $("table.order-list").append(newRow);
        counter++;
    });

    $("table.order-list").on("click", ".ibtnDel", function (event) {
        $(this).closest("tr").remove();       
        counter -= 1
    });
});
</script>

